@model  List<LaserArt.Models.Category>

@{
    ViewBag.Title = "Главная";
}


<div class="container jumbotron" style="padding-top:5px !important;">
    <div class="row" align="left">
        @ViewBag.Info
    </div>
    @{int i = 0; }
    @foreach (var category in Model)
    {

        if (i == 0 || i % 3 == 0)
        {
            @Html.Raw("<div class=\"row\" >");
        }
        <div id="@category.Id" class="col-sm-4 item-div" align="center">
            <img style="width:100%; height:auto;" src="@category.CategoryImage" />
            <p>@category.CategoryName</p>
        </div>



        i++;
        if (i != 0 && i % 3 == 0 || i == Model.Count)
        {
            @Html.Raw("</div>")
        }
    }
    <hr />
   <div class="row">
       <div class="col-sm-4" align="center">
           <h4 class="col-sm-12">Ընտրեք ուտեստը</h4>
           <img src="~/images/Logomakr_38fN2N.png" style="width:20%;height:auto;"/>
       </div>
       <div class="col-sm-4" align="center">
           <h4 class="col-sm-12">Ավելացրեք զամբյուղ</h4>

           <img src="~/images/Logomakr_3lnzlL.png" style="width:20%;height:auto;">
       </div>
       <div class="col-sm-4" align="center">
           <h4 class="col-sm-12">Պատվիրեք</h4>

           <img src="~/images/Logomakr_5OfkrT.png" style="width:20%;height:auto;">
       </div>
       
       
   </div>
</div>
<script src="~/Scripts/carousel.js"></script>