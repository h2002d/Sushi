@model LaserArt.Models.Category

@{
    ViewBag.Title = "CreateCategory";
}

<h2>CreateCategory</h2>

@using (Html.BeginForm("CreateCategory", "Home", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName_AM, new { htmlAttributes = new { @placeholder = "AM", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName_AM, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.CategoryName_RU, new { htmlAttributes = new { @placeholder = "RU", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName_RU, "", new { @placeholder = "RU", @class = "text-danger" })
                @Html.EditorFor(model => model.CategoryName_EN, new { htmlAttributes = new { @placeholder = "EN", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName_EN, "", new { @placeholder = "EN", @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="file" class="form-control uploadEditorImage" />
                <input type="button" value="Վերբեռնել" class="btn btn-default fileUpload" />
                @Html.TextBoxFor(model => model.CategoryImage, new { @class = "image", @style = "display:none;" })
                @Html.ValidationMessageFor(model => model.CategoryImage, "Картинка не загружена", new { @class = "text-danger" })


            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
