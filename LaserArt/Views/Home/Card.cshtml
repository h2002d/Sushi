@model List<LaserArt.Models.CardModel>

@{
    ViewBag.Title = Resource.Basket;
}

<div class="jumbotron">
    <h3>@Resource.Basket</h3>
    <table>
        <tr class="card-details-header">
            <th>@Resource.ProductName</th>
            <th>@Resource.ProductQuantity</th>
            <th>@Resource.ProductPrice</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {

            <tr id="@(item.product.Id+"itemCard")">
                <td>

                    <p>@item.product.ProductTitle</p>
                    <img src="@item.product.ImageSource" class="imageHeader" />
                </td>

                <td>
                    <p>@item.ProductQuantity</p>
                </td>
                <td>
                    <p>@item.product.Price AMD.</p>
                    @if (@item.product.PriceDiscounted != 0)
                {
                    <del> @item.product.PriceDiscounted</del>
                    }
                </td>
                <td>
                    <a class="removeCard" id="@item.product.Id">@Resource.DeleteProduct</a>
                </td>
            </tr>
        }


        <tr>
            <td></td>
            <td></td>
            <td><p>@Resource.OrderPrice:@ViewBag.Sum</p>
            <td>
                @if (Model.Count > 0)
                {
                    <input type="button" class="btn btn-default" onclick="orderBtnClick()" value="@Resource.CreatOrder" />
                }
            </td>
        </tr>

    </table>
</div>
