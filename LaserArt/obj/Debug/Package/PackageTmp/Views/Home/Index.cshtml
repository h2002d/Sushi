@model  List<LaserArt.Models.Category>

@{
    ViewBag.Title = "Главная";
}

<div class="w3-content w3-section" style="position:absolute; top:0;left:0;">
    @foreach (var item in ViewBag.Sales)
    {
        <a class="mySlides" href="@item.link">
            <img class="myslideImage" src="@item.image">
        </a>
    }

</div>

<div class="row">
    <div id="image-head" class="image-head">
        <div class="centering-hack">


            <h1 id="changeText"></h1>
            <div id="myWorkContent">
                @foreach (var category in Model)
                {
                    <div id="@category.Id" class="col-sm-4 item-div" style="width:10%;position:relative;color:white;" align="center">
                        <img style="width:100%; height:auto;" src="@category.CategoryImage" />
                        <p>@category.CategoryName</p>
                    </div>
                }
            </div>
        </div>
    </div>

</div>